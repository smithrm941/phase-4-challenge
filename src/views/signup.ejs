<!DOCTYPE html>
<html>
<head>
  <title>Vinyl : Sign Up</title>
  <%- include ./partials/style_script %>
</head>
<body>
  <%- include ./partials/navbar %>

  <form class="sign-up-form" action="/signup" method="POST">
    <h1>Sign Up for Vinyl</h1>
    <br>
    <br>
    <div class="form-group-row">
      <label for="name" class="col-2 col-form-label">Name</label>
      <input name="name" type="text"></input>
    </div>
    <div class="form-group-row">
      <label for="email" class="col-2 col-form-label">Email</label>
      <input name="email" type="text"></input>
    </div>
    <div class="form-group-row">
      <label for="password" class="col-2 col-form-label">Password</label>
      <input name="password" type="password"></input>
    </div>
    <%if (message) { %>
      <div class="form-group-row">
        <p class="message sign-up-message">
          <%=message%>
        </p>
        <p>Already registered? Sign in <a href="/signin">here</a></p>
      </div>
    <% } %>
    <br>
    <div class="form-group-row">
      <button type="submit" class="sign-up-submit">Submit</button>
    </div>
    <br>
  </form>

<%-include ./partials/footer %>
